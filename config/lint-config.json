{
  "linting": {
    "rules": {
      "no-unused-vars": "warn",
      "complex-functions": "warn",
      "max-line-length": {
        "level": "warn",
        "limit": 100
      },
      "no-trailing-spaces": "error",
      "prefer-const": "warn"
    }
  },
  "formatting": {
    "indent_style": "space",
    "indent_size": 2,
    "end_of_line": "lf",
    "charset": "utf-8",
    "trim_trailing_whitespace": true,
    "insert_final_newline": true,
    "max_line_length": 100
  },
  "plugins": {
    "enabled": true,
    "directories": ["./plugins", "./compiler/plugins"]
  }
}